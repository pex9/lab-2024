{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.my-schema.com/review_schema.json",
  "title": "User",
  "description": "JSON Schema for Review data structures",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "path to the JSON Schema to use for the validation of the JSON data structure"
    },
    "properties": {
      "reviewerId": {
        "type": "integer"
      },
      "filmId": {
        "type": "integer"
      },
      "completed": {
        "type": "boolean",
        "default": false
      },
      "reviewDate": {
        "type": "string",
        "format": "date"
      },
      "rating": {
        "type": "integer",
        "minimum": 0,
        "maximum": 10
      },
      "review": {
        "type": "string"
      }
    }
  },
  "required": ["reviewerId", "filmId", "completed"],
  "dependencies": {
    "reviewDate": {
      "properties": {
        "completed": { "const": true }
      }
    },
    "rating":{
        "properties": {
            "completed": { "const": true }
        }
    },
    "review":{
        "properties": {
            "completed": { "const": true }
        }
    }
  }
}
